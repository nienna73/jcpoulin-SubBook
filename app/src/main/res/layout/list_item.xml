<?xml version="1.0" encoding="utf-8"?>
<!-- Formatting taken from:
https://stackoverflow.com/questions/19775527/android-listview-custom-listitem-not-displayed-correctly-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp"
    android:textSize="16sp" >

    <TextView
        android:id="@+id/date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/name"
        android:singleLine="true"
        android:text="Date started"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="Subscription Name"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/amount"
        android:layout_width="fill_parent"
        android:layout_height="26dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/date"
        android:singleLine="true"
        android:text="Subscription amount"
        android:textSize="12sp" />
</RelativeLayout>
